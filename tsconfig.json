{
	"compilerOptions": {
		"target": "ESNext",
		"baseUrl": ".",
		"module": "ESNext",
		"moduleResolution": "Bundler",

		"types": ["fvtt-types"],
		"allowImportingTsExtensions": true,
		"strict": true,
		"noEmit": true,
		"sourceMap": true,
		"forceConsistentCasingInFileNames": true,
		"isolatedModules": true,

		"verbatimModuleSyntax": true,
		"skipLibCheck": true
	},

	"include": ["src/**/*"],
	"exclude": ["node_modules/*"]
}